extends layout

block content
 .container
  div(class="card col-md-6 offset-md-3 mt-5")
    div(class="card-body")
        h1(class="card-title text-center") #{title}
        form(method='POST', action='/users/register')
            .form-group
                label Name
                input.form-control(name='name', type='text')
            .form-group
                label Phone Number
                input.form-control(name='phone', type='number')
            .form-group
                label Email
                input.form-control(name='email', type='email')
            .form-group
                label Username
                input.form-control(name='username', type='text')
            .form-group
                label Password
                input.form-control(name='password', type='password')
            .form-group
                label Confirm Password
                input.form-control(name='password2', type='password')
            input.btn.btn-primary(type='submit', value='Submit')